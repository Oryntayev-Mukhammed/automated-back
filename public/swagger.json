{
  "openapi": "3.0.3",
  "info": {
    "title": "Automaton Soft API",
    "version": "1.0.0",
    "description": "REST endpoints for cases and posts"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "paths": {
    "/cases": {
      "get": {
        "summary": "List cases",
        "parameters": [
          { "in": "query", "name": "category", "schema": { "type": "string" } },
          { "in": "query", "name": "location", "schema": { "type": "string" } },
          { "in": "query", "name": "tag", "schema": { "type": "string" } },
          { "in": "query", "name": "status", "schema": { "type": "string" } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "minimum": 1, "maximum": 100 } }
        ],
        "responses": {
          "200": {
            "description": "Array of cases",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Case" }
                    },
                    "meta": { "$ref": "#/components/schemas/PaginationMeta" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create case",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CaseCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Case" } }
                }
              }
            }
          },
          "422": { "description": "Validation error" }
        }
      }
    },
    "/cases/{slug}": {
      "get": {
        "summary": "Case by slug",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Case object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Case" } }
                }
              }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "post": {
        "summary": "Update case (POST)",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CaseUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Case" } }
                }
              }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update case (PUT)",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CaseUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Case" } }
                }
              }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "patch": {
        "summary": "Update case (PATCH)",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CaseUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Case" } }
                }
              }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete case",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/posts": {
      "get": {
        "summary": "List posts",
        "parameters": [
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "per_page", "schema": { "type": "integer", "minimum": 1, "maximum": 100 } }
        ],
        "responses": {
          "200": {
            "description": "Array of posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Post" }
                    },
                    "meta": { "$ref": "#/components/schemas/PaginationMeta" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create post",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/PostCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Post" } }
                }
              }
            }
          },
          "422": { "description": "Validation error" }
        }
      }
    },
    "/posts/{slug}": {
      "get": {
        "summary": "Post by slug",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Post object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Post" } }
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      },
      "post": {
        "summary": "Update post (POST)",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/PostUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Post" } }
                }
              }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update post (PUT)",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/PostUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Post" } }
                }
              }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "patch": {
        "summary": "Update post (PATCH)",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/PostUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "$ref": "#/components/schemas/Post" } }
                }
              }
            }
          },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete post",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "404": { "description": "Not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Case": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "property_title": { "type": "string" },
          "cover_image": { "type": "string" },
          "property_price": { "type": "string" },
          "category": { "type": "string" },
          "location": { "type": "string" },
          "livingArea": { "type": "string" },
          "tag": { "type": "string" },
          "status": { "type": "string" },
          "type": { "type": "string" },
          "slug": { "type": "string" }
        },
        "required": ["id", "property_title", "slug"]
      },
      "CaseCreate": {
        "type": "object",
        "properties": {
          "property_title": { "type": "string" },
          "category": { "type": "string" },
          "location": { "type": "string" },
          "livingArea": { "type": "string" },
          "tag": { "type": "string" },
          "status": { "type": "string" },
          "type": { "type": "string" },
          "slug": { "type": "string" }
        },
        "required": ["property_title"]
      },
      "CaseUpdate": {
        "type": "object",
        "properties": {
          "property_title": { "type": "string" },
          "property_price": { "type": "string" },
          "category": { "type": "string" },
          "location": { "type": "string" },
          "livingArea": { "type": "string" },
          "tag": { "type": "string" },
          "status": { "type": "string" },
          "type": { "type": "string" }
        }
      },
      "Post": {
        "type": "object",
        "properties": {
          "slug": { "type": "string" },
          "title": { "type": "string" },
          "excerpt": { "type": "string" },
          "coverImage": { "type": "string" },
          "author": { "type": "string" },
          "published_at": { "type": "string", "format": "date" }
        },
        "required": ["slug", "title"]
      },
      "PostCreate": {
        "type": "object",
        "properties": {
          "slug": { "type": "string" },
          "title": { "type": "string" },
          "excerpt": { "type": "string" },
          "coverImage": { "type": "string" },
          "author": { "type": "string" },
          "published_at": { "type": "string", "format": "date" }
        },
        "required": ["title"]
      },
      "PostUpdate": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "excerpt": { "type": "string" },
          "coverImage": { "type": "string" },
          "author": { "type": "string" },
          "published_at": { "type": "string", "format": "date" }
        }
      },
      "PaginationMeta": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "per_page": { "type": "integer" },
          "total": { "type": "integer" },
          "last_page": { "type": "integer" }
        }
      }
    }
  }
}
